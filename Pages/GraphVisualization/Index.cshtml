@page 
@using GraphAlgorithmsAndVisualization.Models
@using GraphAlgorithmsAndVisualization.Visualization;
@model GraphAlgorithmsAndVisualization.Pages.GraphVisualization.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Graph Visualization</h1>
    @switch(@VisualizationGlobal.CurrentPartial)
    {
        case Models.Partial.Graph:
        <partial name="/Pages/GraphVisualization/_Graph.cshtml" for="@Model.GraphModel"/>
        break;
        case Models.Partial.Solution:
        <partial name="/Pages/GraphVisualization/_Solution.cshtml" for="@Model.SolutionModel"/>
        break;
        case Models.Partial.GraphElement:
        <partial name="/Pages/GraphVisualization/_GraphElement.cshtml" for="@Model.ElementModel"/>
        break;
    }
</div>
